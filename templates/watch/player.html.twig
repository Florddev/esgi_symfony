{% extends 'base.html.twig' %}

{% block title %}{{ media.title }}{% endblock %}

{% block contenu_page %}
    <div class="relative">
        <div class="aspect-video bg-black relative">
            <div class="absolute inset-0 flex items-center justify-center text-white">
                <div class="text-center">
                    <h2 class="text-2xl mb-4">{{ media.title }}</h2>
                    <p class="text-gray-400">Lecteur vidéo en cours de développement</p>
                    <p class="mt-2 text-sm">Visionnage n°{{ history.numberOfViews }}</p>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <h3 class="font-bold text-lg">{{ media.title }}</h3>
            <p class="mt-2 text-gray-600">{{ media.shortDescription }}</p>
        </div>
    </div>
{% endblock %}